<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp">

            <Spinner
                android:id="@+id/i2c_inter_channel_spinner"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:elevation="2dp"
                android:gravity="right|center_vertical"
                android:background="@drawable/material_button_blue"
                android:popupBackground="@drawable/material_button_blue"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Interupt Channel"
                android:textSize="12dp"
                android:layout_toLeftOf="@+id/i2c_inter_channel_spinner"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Spinner
                android:id="@+id/i2c_inter_config_spinner"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:background="@drawable/material_button_blue"
                android:popupBackground="@drawable/material_button_blue"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Interupt Configuration"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/i2c_inter_config_spinner"
                android:layout_alignParentLeft="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>