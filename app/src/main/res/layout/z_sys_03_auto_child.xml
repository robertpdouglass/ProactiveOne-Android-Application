<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp">

            <ToggleButton
                android:id="@+id/sys_auto_toggle"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:elevation="2dp"
                android:background="@drawable/material_button"
                android:textColor="#ffffff"
                android:textOff="Disabled"
                android:textOn="Enabled"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Enable"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/sys_auto_toggle"
                android:layout_toStartOf="@+id/sys_auto_toggle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/sys_auto_edittext"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


            <Button
                android:id="@+id/sys_auto_neg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:elevation="2dp"
                android:textSize="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/material_button"
                android:layout_alignParentTop="true"
                android:textColor="#ffffff"
                android:layout_toLeftOf="@+id/sys_auto_pos"
                android:layout_toStartOf="@+id/sys_auto_pos" />

            <Button
                android:id="@+id/sys_auto_pos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:background="@drawable/material_button"
                android:text="+"
                android:textColor="#ffffff"
                android:layout_marginRight="5dp"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/sys_auto_edittext"
                android:layout_toStartOf="@+id/sys_auto_edittext" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:text="Interval Value (Minutes)"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/sys_auto_neg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>