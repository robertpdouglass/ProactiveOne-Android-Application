<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <Button
        android:id="@+id/int_t_skip_neg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/int_t_skip_pos"
        android:layout_toStartOf="@+id/int_t_skip_pos"
        android:background="@drawable/material_button"
        android:text="-"
        android:elevation="2dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <Button
        android:id="@+id/int_t_skip_pos"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/int_t_skip_edittext"
        android:layout_toStartOf="@+id/int_t_skip_edittext"
        android:background="@drawable/material_button"
        android:text="+"
        android:elevation="2dp"
        android:textColor="#ffffff"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/int_t_skip_edittext"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:background="@drawable/material_button_blue"
        android:foregroundGravity="right"
        android:elevation="2dp"
        android:gravity="right|center_vertical"
        android:inputType="number"
        android:paddingRight="25dp"
        android:textSize="15dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#474747"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Power Wait Time (250ms Intervals)"
        android:textSize="12dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/int_t_skip_neg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>