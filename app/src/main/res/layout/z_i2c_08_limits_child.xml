<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/i2c_low_limit_1_edittext"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:elevation="2dp"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Low Alarm Limit 1"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/i2c_low_limit_1_edittext"
                android:layout_toStartOf="@+id/i2c_low_limit_1_edittext" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/i2c_high_limit_1_edittext"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="High Alarm Limit 1"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/i2c_high_limit_1_edittext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/i2c_low_limit_2_edittext"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:elevation="2dp"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Low Alarm Limit 2"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/i2c_low_limit_2_edittext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/i2c_high_limit_2_edittext"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/material_button_blue"
                android:elevation="2dp"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:textColor="#474747"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="High Alarm Limit 2"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/i2c_high_limit_2_edittext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>