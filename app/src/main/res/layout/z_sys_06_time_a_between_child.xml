<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <Spinner
                android:id="@+id/sys_time_a_type_spinner"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textSize="15dp"
                android:elevation="2dp"
                android:layout_gravity="right"
                android:background="@drawable/material_button_blue"
                android:popupBackground="@drawable/material_button_blue"
                android:textColor="#ffffff"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Time Type"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/sys_time_a_type_spinner"
                android:layout_toStartOf="@+id/sys_time_a_type_spinner" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/sys_time_a_between_neg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"
                android:elevation="2dp"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/material_button"
                android:layout_alignParentTop="true"
                android:textColor="#ffffff"
                android:layout_toLeftOf="@+id/sys_time_a_between_pos"
                android:layout_toStartOf="@+id/sys_time_a_between_pos" />

            <Button
                android:id="@+id/sys_time_a_between_pos"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:elevation="2dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/sys_time_a_between_edittext"
                android:layout_toStartOf="@+id/sys_time_a_between_edittext"
                android:background="@drawable/material_button"
                android:text="+"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/sys_time_a_between_edittext"
                android:layout_width="85dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:elevation="2dp"
                android:textSize="15dp"
                android:paddingRight="25dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="center_vertical"
                android:gravity="center_vertical"
                android:text="Minutes"
                android:textSize="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/sys_time_a_between_neg"
                android:layout_toStartOf="@+id/sys_time_a_between_neg" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>