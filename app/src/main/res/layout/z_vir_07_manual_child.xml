<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/vir_manual_1_edittext"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:elevation="2dp"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textSize="15dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="right"
                android:gravity="center_vertical"
                android:text="Manual Parameter #1"
                android:textSize="12dp"
                android:layout_alignBottom="@+id/vir_manual_1_edittext"
                android:layout_toLeftOf="@+id/vir_manual_1_edittext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/vir_manual_2_edittext"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="@drawable/material_button_blue"
                android:foregroundGravity="right"
                android:elevation="2dp"
                android:gravity="right|center_vertical"
                android:inputType="number"
                android:paddingRight="25dp"
                android:textSize="15dp"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="#474747"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="10dp"
                android:foregroundGravity="right"
                android:gravity="center_vertical"
                android:text="Manual Parameter #2"
                android:textSize="12dp"
                android:layout_alignBottom="@+id/vir_manual_2_edittext"
                android:layout_toLeftOf="@+id/vir_manual_2_edittext"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>